generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  password         String
  avatarUrl        String?
  role             Role     @default(EDITOR)
  isEmailVerified  Boolean  @default(false)
  // OAuth provider (ex: 'google') et identifiant fournisseur
  provider         String?
  providerId       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  Brand    Brand[]
  members  Member[]
  tokens   VerificationToken[]

  @@index([createdAt])
  @@unique([provider, providerId])
}

model Brand {
  id        String    @id @default(cuid())
  name      String
  locale    String    @default("fr")
  tone      String?
  ctas      String[]  @default([])
  forbidden String[]  @default([])
  ownerId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  owner     User      @relation(fields: [ownerId], references: [id])
  channels  Channel[]
  Contact   Contact[]
  contents  Content[]
  media     Media[]
  members   Member[]

  @@index([ownerId])
  @@index([createdAt])
}

model Member {
  id      String @id @default(cuid())
  brandId String
  userId  String
  role    Role   @default(EDITOR)

  brand   Brand  @relation(fields: [brandId], references: [id])
  user    User   @relation(fields: [userId], references: [id])

  @@unique([brandId, userId])
  @@index([userId])
}

model Channel {
  id        String      @id @default(cuid())
  brandId   String
  type      ChannelType
  status    String      @default("disconnected")
  token     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  brand     Brand       @relation(fields: [brandId], references: [id])

  @@index([brandId])
  @@index([type])
}

model Media {
  id        String    @id @default(cuid())
  brandId   String
  url       String
  kind      MediaKind
  tags      String[]
  createdAt DateTime  @default(now())

  brand     Brand     @relation(fields: [brandId], references: [id])

  @@index([brandId])
  @@index([createdAt])
}

model Content {
  id          String        @id @default(cuid())
  brandId     String
  type        ContentType
  title       String?
  body        String
  mediaIds    String[]
  status      ContentStatus @default(DRAFT)
  scheduledAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  brand       Brand         @relation(fields: [brandId], references: [id])

  @@index([brandId])
  @@index([status])
  @@index([createdAt])
}

model PublishLog {
  id        String      @id @default(cuid())
  contentId String
  channel   ChannelType
  status    String
  error     String?
  ts        DateTime    @default(now())

  @@index([contentId])
  @@index([channel])
  @@index([ts])
}

model Contact {
  id        String   @id @default(cuid())
  brandId   String
  email     String?
  phone     String?
  consent   Boolean  @default(true)
  tags      String[]
  createdAt DateTime @default(now())

  brand     Brand    @relation(fields: [brandId], references: [id])

  @@index([brandId])
  @@index([createdAt])
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

enum ChannelType {
  INSTAGRAM
  FACEBOOK
  EMAIL
  WHATSAPP
  SMS
}

enum MediaKind {
  IMAGE
  VIDEO
}

enum ContentType {
  POST
  EMAIL
  WA
}

enum ContentStatus {
  DRAFT
  REVIEW
  APPROVED
  SCHEDULED
  PUBLISHED
}
